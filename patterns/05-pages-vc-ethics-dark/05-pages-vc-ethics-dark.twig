{% extends '@templates/vc-template.twig' %}

{% block pageHeader %}
  {% include "@organisms/vc-hero-ethics/vc-hero-ethics.twig" %}
{% endblock %}

{% block pageContent %}
  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_centered: true,
    layout_heading_centered: true,
    layout_heading: "Abstract"
  } %}
    {% block layout_bottom %}
      {% set text_block = abstract %}
      {% include "@organisms/vc-text-block/vc-text-block.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_fullwidth: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% set scroll_zoom = scroll_zoom %}
      {% include "@organisms/vc-scroll-zoom/vc-scroll-zoom.twig" with scroll_zoom %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_larger_left_col: true,
    layout_heading: null
  } %}
    {% block layout_first %}
      {% set featured_media = featured_media_1 %}
      {% include "@organisms/vc-featured-media/vc-featured-media.twig" %}
    {% endblock %}
    {% block layout_second %}
      {% set text_block = caption_1 %}
      {% include "@organisms/vc-text-block/vc-text-block.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_fullwidth: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% include "@organisms/vc-featured-quote/vc-featured-quote.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_fullwidth: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% set reaction = featured_audio.reaction %}
      {% include "@organisms/vc-featured-audio/vc-featured-audio.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_larger_right_col: true,
    layout_heading: null
  } %}
    {% block layout_first %}
      {% set text_block = caption_2 %}
      {% include "@organisms/vc-text-block/vc-text-block.twig" %}
    {% endblock %}
    {% block layout_second %}
      {% set featured_media = featured_media_2 %}
      {% include "@organisms/vc-featured-media/vc-featured-media.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_centered: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% include "@organisms/vc-slide-rule/vc-slide-rule.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_centered: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% set text_block = slide_rule_caption %}
      {% include "@organisms/vc-text-block/vc-text-block.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_fullwidth: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% set featured_media = featured_video %}
      {% set reaction = featured_video.reaction %}
      {% include "@organisms/vc-featured-media/vc-featured-media.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_fullwidth: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% include "@organisms/vc-cards/vc-cards.twig" %}
    {% endblock %}
  {% endembed %}

  {% set issue = vc_issue %}
  {% include "@organisms/vc-article-bottom/vc-article-bottom.twig" %}
{% endblock %}
