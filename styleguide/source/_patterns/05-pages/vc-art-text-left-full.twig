{% extends '@templates/vc-template.twig' %}

{% block pageHeader %}
  {% include "@organisms/vc-hero-art/vc-hero-art.twig" %}
{% endblock %}

{% block pageContent %}
  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_centered: true,
    layout_heading_centered: true,
    layout_heading: "Abstract"
  } %}
    {% block layout_bottom %}
      {% set text_block = abstract %}
      {% include "@organisms/vc-text-block/vc-text-block.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_fullwidth: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% set gallery = comics %}
      {% include "@organisms/vc-horizontal-gallery/vc-horizontal-gallery.twig" %}
    {% endblock %}
  {% endembed %}

  {% embed "@base/vc-layout-paragraphs/vc-layout-paragraphs.twig" with {
    layout_centered: true,
    layout_heading: null
  } %}
    {% block layout_bottom %}
      {% set text_block = body_copy %}
      {% include "@organisms/vc-text-block/vc-text-block.twig" %}
    {% endblock %}
  {% endembed %}

  {% set issue = vc_issue %}
  {% include "@organisms/vc-article-bottom/vc-article-bottom.twig" %}
{% endblock %}
