<section class="joe__poll joe__poll--inline">
  {% include "@atoms/flag.twig" with { "flag": {"type": "Ethics Poll", "class": "joe__flag--larger joe__flag--green" }} %}
  <div class="joe__poll__block">
    <div class="joe__poll__question">
      <div>
      {{ poll.question }}
      </div>
    </div>
    <form class="joe__poll__answers">
      <ul class="joe__poll__answerlist">
      {% for answer in poll.answers %}
        <li class="joe__poll__answer">
        {% set input = answer.input %}
        {% include "@atoms/input.twig" %}
        {% set label = answer.label %}
        {% include "@atoms/label.twig" %}
          <div class="joe__poll__result">
            <dd class="choice-result">
              <div class="bar" data-max="{{poll.vote_count}}" data-min="0" data-choice="Choice three" data-value="{{answer.vote}}">
                <div style="width: {{answer.percent}}" class="foreground"></div>
              </div>
              <div class="percent">{{answer.percent}}</div>
            </dd>
          </div>
        </li>
      {% endfor %}
      </ul>
      
      {% include "@atoms/input.twig" with { "input": {"type" : "submit", "name" : "Ethics Poll Submit", "id" : "ethics_poll_submit", "value" : "submit"  } } %}
      <button type="button" class="joe__poll__reveal">
        <span class="poll__show">Show</span><span class="poll__hide">Hide</span> results
      </button>
    </form>
  </div>
</section>
