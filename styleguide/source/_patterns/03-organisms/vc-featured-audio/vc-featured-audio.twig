<div class="vc-featured-audio">
  <header class="vc-featured-audio__header">
    <h2 class="vc-featured-audio__heading">{{ featured_audio.title }}</h2>
    {% if featured_audio.description %}
      <div class="vc-featured-audio__description">
        {{ featured_audio.description|raw }}
      </div>
    {% endif %}
  </header>
  <div class="vc-featured-audio__container">
    <div class="vc-featured-audio__spectrum-container">
      <div class="vc-featured-audio__spectrum">
        {% for i in 1..127 %}
          <div class="vc-featured-audio__spectrum-bar" id="bar-{{ i }}"></div>
        {% endfor %}
      </div>
    </div>
    <div class="vc-featured-audio__player">
      <audio src="{{ featured_audio.src }}" controls="controls"></audio>
    </div>
    {% include "@base/icons/audio-blur.svg" %}
  </div>
  <footer class="vc-featured-audio__footer">
    {% if featured_audio.transcript_download %}
      <a class="vc-featured-audio__download" href="{{ featured_audio.transcript_download }}">Download Transcript</a>
    {% endif %}
    {% if featured_audio.copyright %}
      <span class="vc-featured-audio__copyright">
        {{ featured_audio.copyright }}
      </span>
    {% endif %}
  </footer>
  {% set reaction = featured_audio.reaction %}
  {% include "@molecules/vc-reaction-bar/vc-reaction-bar.twig" %}
</div>
