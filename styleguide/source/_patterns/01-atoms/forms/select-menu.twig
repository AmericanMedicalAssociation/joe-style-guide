<div class="joe__form-group">
  <label>{{selectMenu.label}}</label>
  <select
    name="{{selectMenu.id}}"
    id="{{selectMenu.id}}"
    {% if selectMenu.class %}class="{{ selectMenu.class }}"{% endif %}
    {# The `ama__jump_menu` class and the `data-url` options should only be included if this is a jump menu. #}
    <option value="" selected hidden>Select an option</option>
    {% for option in selectMenu.options %}
      <option data-url="{{option.value}}" value="{{option.value}}">{{ option.text }}</option>
    {% endfor %}
  </select>
</div>
